<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="User Browser">

    <data>
        <collection id="usersCont"
                    class="com.haulmont.cuba.security.entity.User"
                    view="user.browse">
            <loader id="usersLoader">
                <query>
                    select u from sec$User u
                    order by u.name
                </query>
            </loader>
        </collection>
    </data>

    <layout spacing="true" expand="usersTable">
        <filter id="usersFilter"
                dataLoader="usersLoader"/>
        <groupTable id="usersTable"
               width="100%">
            <actions>
                <action id="create" type="entity_create"/>
                <action id="edit" type="entity_edit"/>
                <action id="remove" type="entity_remove"/>
            </actions>
            <buttonsPanel>
                <button id="createBtn" action="usersTable.create"/>
                <button id="editBtn" action="usersTable.edit"/>
                <button id="removeBtn" action="usersTable.remove"/>
            </buttonsPanel>
            <rowsCount/>
            <columns>
                <column id="login"/>
                <column id="name"/>
                <column id="group"/>
                <column id="active"/>
            </columns>
            <rows dataContainer="usersCont"/>
        </groupTable>
    </layout>
</window>

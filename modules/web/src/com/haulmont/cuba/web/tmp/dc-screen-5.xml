<window caption="Screen 5">

    <data>
        <collection id="usersCont"
                    class="com.haulmont.cuba.security.entity.User" view="user.browse">

                <loader id="usersLoader">
                <query>
                    select u from sec$User u
                    order by u.name
                </query>
            </loader>
        </collection>
    </data>

    <layout spacing="true" expand="usersTable">
        <filter id="usersFilter"
                dataLoader="usersLoader"/>
        <table id="usersTable"
               width="100%">
            <buttonsPanel>
                <button id="createBtn" caption="Create"/>
                <button id="editBtn" caption="Edit"/>
                <button id="removeBtn" caption="Remove"/>
            </buttonsPanel>
            <columns>
                <column id="login"/>
                <column id="name"/>
            </columns>
            <rows container="usersCont"/>
        </table>
    </layout>
</window>
